
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffffff"
    tools:context=".JobDetailsActivity">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linearLayout2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/detailsName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#89cede"
                    android:gravity="center"
                    android:textSize="30dp"
                    android:paddingBottom="25dp"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <TextView
                    android:id="@+id/description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_margin="4dp"
                    android:textColor="#89cede"
                    android:text="Description:"
                    android:layout_weight="0.8"
                    android:textSize="16dp"
                    android:gravity="right"
                    />
                <TextView
                    android:id="@+id/detailsDescription"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_margin="4dp"
                    android:textColor="#000000"
                    android:layout_weight="1.2"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <TextView
                    android:id="@+id/start_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_margin="4dp"
                    android:textColor="#89cede"
                    android:text="Start Date:"
                    android:layout_weight="0.8"
                    android:textSize="16dp"
                    android:gravity="right"
                    />
                <TextView
                    android:id="@+id/detailsStartDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_margin="4dp"
                    android:textColor="#000000"
                    android:layout_weight="1.2"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <TextView
                    android:id="@+id/end_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_margin="4dp"
                    android:textColor="#89cede"
                    android:text="End Date:"
                    android:layout_weight="0.8"
                    android:textSize="16dp"
                    android:gravity="right"
                    />
                <TextView
                    android:id="@+id/detailsEndDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_margin="4dp"
                    android:textColor="#000000"
                    android:layout_weight="1.4"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:paddingBottom="0dp">

                <TextView
                    android:id="@+id/payment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_margin="4dp"
                    android:textColor="#89cede"
                    android:text="Payment:"
                    android:layout_weight="0.8"
                    android:textSize="16dp"
                    android:gravity="right"
                    />
                <TextView
                android:id="@+id/detailsPayment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_margin="4dp"
                android:textColor="#000000"
                android:layout_weight="1.4"
                />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <TextView
                    android:id="@+id/emailField"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_margin="4dp"
                    android:textColor="#89cede"
                    android:text="Email:"
                    android:layout_weight="0.8"
                    android:textSize="16dp"
                    android:gravity="right"
                    />
                <TextView
                    android:id="@+id/contactInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_margin="4dp"
                    android:textColor="#000000"
                    android:text="*********"
                    android:layout_weight="1.2"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <TextView
                    android:id="@+id/phoneField"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_margin="4dp"
                    android:textColor="#89cede"
                    android:text="Phone:"
                    android:layout_weight="0.8"
                    android:textSize="16dp"
                    android:gravity="right"
                    />
                <TextView
                    android:id="@+id/userPhoneNumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_margin="4dp"
                    android:textColor="#000000"
                    android:text="*********"
                    android:layout_weight="1.2"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:id="@+id/locationFieldLayout">

                <TextView
                    android:id="@+id/locationField"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_margin="4dp"
                    android:textColor="#89cede"
                    android:text="Location:"
                    android:layout_weight="0.8"
                    android:textSize="16dp"
                    android:gravity="right"
                    />
                <TextView
                    android:id="@+id/userLocation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_margin="4dp"
                    android:textColor="#000000"
                    android:text="*********"
                    android:layout_weight="1.2"
                    />

            </LinearLayout>


        </LinearLayout>

    <LinearLayout
        android:layout_below="@id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        >

    <Button
        android:id="@+id/Request"
        android:layout_below="@id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:text="Request Job"
        android:textSize="15dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:onClick="updateJob"
        style="@style/buttonBackground"/>

    <Button
        android:id="@+id/moreInfoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:text="Request Info"
        android:textSize="15dp"
        android:onClick="requestJobDetails"
        style="@style/buttonBackground"/>


    </LinearLayout>


    <!--<Button
        android:id="@+id/buttonDashboard"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/dashboard_icon"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="0dp"
        android:onClick="displayHomepage"
        android:layout_alignParentBottom="true"
    />-->
    <include layout = "@layout/bottom_menu" />





</RelativeLayout>
