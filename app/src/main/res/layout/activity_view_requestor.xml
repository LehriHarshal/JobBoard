<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@color/white">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text=""
        style="@style/LogInFont"
        android:textSize="35sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout2"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="60dp"
                android:id="@+id/detailsName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#89cede"
                android:gravity="center"
                android:textSize="30dp"
                android:paddingBottom="25dp"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <TextView
                android:id="@+id/userNameText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_margin="4dp"
                android:textColor="#89cede"
                android:text="Name:"
                android:layout_weight="0.8"
                android:textSize="16dp"
                android:gravity="right"
                />
            <TextView
                android:id="@+id/userNameDetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_margin="4dp"
                android:textColor="#000000"
                android:layout_weight="1.2"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <TextView
                android:id="@+id/start_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_margin="4dp"
                android:textColor="#89cede"
                android:text="Email:"
                android:layout_weight="0.8"
                android:textSize="16dp"
                android:gravity="right"
                />
            <TextView
                android:id="@+id/emailDetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_margin="4dp"
                android:text=""
                android:textColor="#000000"
                android:layout_weight="1.2"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <TextView
                android:id="@+id/end_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_margin="4dp"
                android:textColor="#89cede"
                android:text="Phone:"
                android:layout_weight="0.8"
                android:textSize="16dp"
                android:gravity="right"
                />
            <TextView
                android:id="@+id/phoneDetail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_margin="4dp"
                android:textColor="#000000"
                android:text=""
                android:layout_weight="1.4"
                />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/moveForwardButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select to Complete Job"
        style="@style/buttonBackground"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="30dp"
        android:onClick="moveForward"
        android:layout_below="@id/linearLayout2"
        android:layout_centerHorizontal="true"/>


    <Button
        android:id="@+id/buttonDashboard"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/dashboard_icon"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="0dp"
        android:onClick="displayHomepage"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>


